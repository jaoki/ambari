        "name": "ganglia_server_process",
        "label": "Ganglia Server Process",
        "interval": 1,
        "scope": "ANY",
        "enabled": true,
        "source": {
          "type": "PORT",
          "uri": "8651",
          "default_port": 8651,
          "reporting": {
            "ok": {
              "text": "TCP OK - {0:.4f} response on port {1}"
